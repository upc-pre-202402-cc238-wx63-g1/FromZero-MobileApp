<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/project_card_background"
    android:padding="20dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/project_card_background"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProjectTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Plataforma de Comercio ElectrÃ³nico Geekit"
                android:textColor="@color/primary_title_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNumCandidates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Postulantes: 5"
                android:textColor="@color/secondary_title_color" />
            <LinearLayout
                android:id="@+id/llProgress"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvProgressTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:text="Progreso: "
                    android:textColor="@color/secondary_title_color" />
                <TextView
                    android:id="@+id/tvProgressNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:text="50%"
                    android:textColor="@color/branding_1" />
            </LinearLayout>

            <ProgressBar
                android:visibility="gone"
                android:id="@+id/pbProjectProgress"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:progress="50"
                android:max="100"
                android:progressDrawable="@drawable/custom_progress_bar"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivProfileEnterprisePhoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/geekit_profile"
                />

            <TextView
                android:id="@+id/tvEnterpriseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geekit.pe"
                android:textColor="@color/primary_text_color" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>